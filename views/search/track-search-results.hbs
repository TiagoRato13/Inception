<section class="container__tracks">
  <h1>Songs</h1>
  {{#each tracks}}
    <section class="track__bar">
      <h3 class="track__bar--title">{{name}}</h3>
      <audio
        controls
        src="{{preview_url}}"
        class="track__bar--audio-link"
      ></audio>
      <form action="/addSong" method="post" class="add-song">
      <label for="folder" style="font-weight:bold">Select folder</label>
        <select name="folder" class="folder-select">
          {{#each ../userFolders}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
        <input type="text" name="preview" value="{{preview_url}}" hidden />
        <input type="text" name="name" value="{{name}}" hidden />
        <button type="submit">Add song to list</button>
      </form>
    </section>
  {{/each}}
  <br /><br />
  <a href="/home" class="goback-home-button">HOME</a>

</section>