<section class="albums">
  <h1>Albums for: {{artist.0.artists.0.name}}</h1>
  <div class="albums__cards">
    {{#each artist}}
      <div class="albums__cards_each">
        <img
          src="{{this.images.0.url}}"
          alt="{{this.name}}"
          class="albums__image"
        />

        <div class="card__info">
          <h4 class="card__info--title">
            {{this.name}}
          </h4>
        </div>
        <a href="/view-tracks/{{this.id}}" class="card__info--link">View Tracks</a>
      </div>
    {{/each}}

  </div>
</section>

<br />
<a href="/albums/{{this.id}}"><button>Go back</button></a>